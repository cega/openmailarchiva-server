<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE securityfilter-config PUBLIC
    "-//SecurityFilter.org//DTD Security Filter Configuration 2.0//EN"
    "http://www.securityfilter.org/dtd/securityfilter-config_2_0.dtd">

<securityfilter-config>

 	<security-constraint>
      <web-resource-collection>
      	 <web-resource-name>Basic Functionality</web-resource-name>
         <url-pattern>/searchform.do</url-pattern>
         <url-pattern>/search.do</url-pattern>
         <url-pattern>/advancedsearchform.do</url-pattern>
         <url-pattern>/advancedsearch.do</url-pattern>
         <url-pattern>/searchpage.do</url-pattern>
         <url-pattern>/viewmail.do</url-pattern>
         <url-pattern>/signoff.do</url-pattern>
      </web-resource-collection>
      <auth-constraint>
          <role-name>user</role-name>
          <role-name>auditor</role-name>
          <role-name>administrator</role-name>
      </auth-constraint>
   </security-constraint>
   
   <security-constraint>
      <web-resource-collection>
      	 <web-resource-name>Configuration Functionality</web-resource-name>
          <url-pattern>/configurationform.do</url-pattern>
         <url-pattern>/configure.do</url-pattern>
         <url-pattern>/indexstatus.do</url-pattern>
         <url-pattern>/lookuprolecriterion.do</url-pattern>
         <url-pattern>/testlogin.do</url-pattern>
      </web-resource-collection>
      <auth-constraint>
          <role-name>administrator</role-name>
      </auth-constraint>
   </security-constraint>
   
   
   <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
         <form-login-page>/signonform2.do</form-login-page>
         <form-error-page>/</form-error-page>
         <form-default-page>/search.do</form-default-page>
      </form-login-config>
   </login-config>

   <realm className="com.stimulus.archiva.security.realm.ADRealm">
      
   </realm>

</securityfilter-config>